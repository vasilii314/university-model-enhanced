<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="admin" id="14">
        <preConditions onFail="HALT">
            <not>
                <tableExists tableName="student_grades"/>
            </not>
        </preConditions>
        <createTable tableName="student_grades">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="student_id" type="int">
            	<constraints nullable="false"/>
            </column>
            <column name="course_id" type="int">
            	<constraints nullable="false"/>
            </column>
            <column name="grade" type="int">
            	<constraints nullable="false"/>
            </column>
        </createTable>
        <sql>
        	ALTER TABLE student_grades ADD CONSTRAINT valid_grade CHECK(grade BETWEEN 2 AND 5);
        </sql>
    </changeSet>
    <changeSet id="33" author="admin">
        <addForeignKeyConstraint baseColumnNames="student_id"
                                 baseTableName="student_grades"
                                 baseTableSchemaName="public"
                                 constraintName="fk_student_id"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="students_in_groups"
                                 referencedTableSchemaName="public"
        />
    </changeSet>
    <changeSet id="34" author="admin">
        <addForeignKeyConstraint baseColumnNames="course_id"
                                 baseTableName="student_grades"
                                 baseTableSchemaName="public"
                                 constraintName="fk_course_id"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="courses"
                                 referencedTableSchemaName="public"
        />
    </changeSet>
</databaseChangeLog>