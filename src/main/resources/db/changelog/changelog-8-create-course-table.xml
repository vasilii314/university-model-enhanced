<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="admin" id="8">
        <preConditions onFail="HALT">
        	<and>
        		<not>
                	<tableExists tableName="courses"/>
            	</not>
            	<not>
            		<indexExists indexName="idx_course_name"/>
            	</not>
        	</and>
        </preConditions>
        <createTable tableName="courses">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints  nullable="false"/>
            </column>
            <column name="duration" type="int">
            	<constraints nullable="false" />
            </column>
            <column name="course_type_id" type="int">
            	<constraints nullable="true"/>
            </column>
            <column name="department_id" type="int">
            	<constraints nullable="true"/>
            </column>
        </createTable>
        <sql>
        	ALTER TABLE courses ADD CONSTRAINT valid_duration CHECK(duration > 0);
        </sql>
    </changeSet>
    <changeSet id="24" author="admin">
        <addForeignKeyConstraint baseColumnNames="course_type_id"
                                 baseTableName="courses"
                                 baseTableSchemaName="public"
                                 constraintName="fk_course_type"
                                 onUpdate="CASCADE"
                                 onDelete="SET NULL"
                                 referencedColumnNames="id"
                                 referencedTableName="course_types"
                                 referencedTableSchemaName="public"
        />
    </changeSet>
    <changeSet id="25" author="admin">
        <addForeignKeyConstraint baseColumnNames="department_id"
                                 baseTableName="courses"
                                 baseTableSchemaName="public"
                                 constraintName="fk_course_dpt"
                                 onUpdate="CASCADE"
                                 onDelete="SET NULL"
                                 referencedColumnNames="id"
                                 referencedTableName="departments"
                                 referencedTableSchemaName="public"
        />
    </changeSet>
    <changeSet id="26" author="admin">
        <createIndex tableName="courses" indexName="idx_course_name">
            <column name="name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>