<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="admin" id="10">
        <preConditions onFail="HALT">
            <not>
                <tableExists tableName="people_in_university"/>
            </not>
        </preConditions>
        <createTable tableName="people_in_university">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="human_id" type="int">
            	<constraints nullable="true"/>
            </column>
            <column name="role_id" type="int">
            	<constraints nullable="true"/>
            </column>
            <column name="department_id" type="int">
            	<constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="28" author="admin">
        <addForeignKeyConstraint baseColumnNames="human_id"
                                 baseTableName="people_in_university"
                                 baseTableSchemaName="public"
                                 constraintName="fk_people_in_uni_human_id"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="people"
                                 referencedTableSchemaName="public"
        />
    </changeSet>
    <changeSet id="29" author="admin">
        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="people_in_university"
                                 baseTableSchemaName="public"
                                 constraintName="fk_people_in_uni_role"
                                 onUpdate="CASCADE"
                                 onDelete="SET NULL"
                                 referencedColumnNames="id"
                                 referencedTableName="roles"
                                 referencedTableSchemaName="public"
        />
    </changeSet>
    <changeSet id="30" author="admin">
        <addForeignKeyConstraint baseColumnNames="department_id"
                                 baseTableName="people_in_university"
                                 baseTableSchemaName="public"
                                 constraintName="fk_people_in_uni_dpt"
                                 onUpdate="CASCADE"
                                 onDelete="SET NULL"
                                 referencedColumnNames="id"
                                 referencedTableName="departments"
                                 referencedTableSchemaName="public"
        />
    </changeSet>
</databaseChangeLog>