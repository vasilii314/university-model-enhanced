<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="admin" id="7">
        <preConditions onFail="HALT">
            <and>
                <not>
                    <tableExists tableName="departments"/>
                </not>
                <not>
                    <indexExists indexName="idx_department_name"/>
                </not>
            </and>
        </preConditions>
        <createTable tableName="departments">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="school_id" type="int">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="22" author="admin">
        <addForeignKeyConstraint baseColumnNames="school_id"
                                 baseTableName="departments"
                                 baseTableSchemaName="public"
                                 constraintName="fk_department_school"
                                 onUpdate="CASCADE"
                                 onDelete="SET NULL"
                                 referencedColumnNames="id"
                                 referencedTableName="schools"
                                 referencedTableSchemaName="public"
        />
    </changeSet>
    <changeSet id="23" author="admin">
        <createIndex tableName="departments" indexName="idx_department_name">
            <column name="name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>